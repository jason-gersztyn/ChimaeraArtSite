@model Chimaera.Head.Models.ShopIndexViewModel

@{
    ViewBag.Title = "Shop";
}

<div class="text-center">
    @foreach (var series in Model.series.OrderByDescending(x => x.DateCreated))
    {
        <a href="@Url.Action("Product/" + series.SeriesID, "Shop")" style="text-decoration:none;">
            <div class="productCell">
                @series.Name
                <img src="@Url.Content(series.ImageURL)" alt="@series.Name" class="imageThumb" />
                @if (series.DateCreated.AddDays(15) >= DateTime.UtcNow)
                {
                    <p class="rainbow">New</p>
                }
            </div>
        </a>
    }
</div>

<style type="text/css">
    .imageThumb {
        max-width: 180px;
        width: 80%;
        clear: both;
        display: table;
        margin-left: auto;
        margin-right: auto;
    }

    .productCell {
        margin-top: 30px;
        white-space: nowrap;
        font-size: 6px;
    }

    @@media (min-width:455px) {
        .productCell {
            font-size: 10px;
        }
    }

    @@media (min-width:768px) {
        .productCell {
            font-size: 18px;
        }
    }
</style>